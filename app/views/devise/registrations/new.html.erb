<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %>:
    <%= f.email_field :email, autofocus: true, size:40, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :name %>:
    <%= f.text_field :name, autocomplete: "name" %> <em>(first and last)</em>
  </div>

  <div class="field">
    <%= f.label :password %>:
    <%= f.password_field :password, autocomplete: "new-password" %>

    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>:
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :team_password %>:
    <%= f.text_field :team_password %> <em>(if you've already been invited to a team)</em>
  </div>

  <div class="actions">
    <%= f.submit "Create account" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
